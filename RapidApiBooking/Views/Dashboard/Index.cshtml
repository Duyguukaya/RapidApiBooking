@model RapidApiBooking.Models.DashboardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Briefing Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-dark: #112019;
            --card-dark: #1b2e25;
            --text-light: #e0e6e3;
            --text-muted: #8fa39a;
            --accent-green: #34d399;
            --accent-red: #ef4444;
            --fuel-icon: #f59e0b;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Custom */
        .navbar-custom {
            background-color: var(--card-dark);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            padding: 15px 30px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff !important;
            letter-spacing: -0.5px;
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--accent-green);
        }

        /* Dashboard Cards */
        .dashboard-card {
            background-color: var(--card-dark);
            border-radius: 16px;
            padding: 25px;
            height: 100%;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            border: 1px solid rgba(255,255,255,0.03);
            transition: transform 0.2s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-2px);
                border-color: rgba(52, 211, 153, 0.2);
            }

        .section-title {
            text-transform: uppercase;
            color: var(--text-muted);
            font-size: 0.75rem;
            letter-spacing: 1.2px;
            font-weight: 600;
            margin-bottom: 15px;
            display: block;
        }

        /* Market Watch */
        .market-item {
            background-color: rgba(255,255,255,0.03);
            border-radius: 12px;
            padding: 15px;
            transition: 0.2s;
        }

            .market-item:hover {
                background-color: rgba(255,255,255,0.08);
            }

        .market-label {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .market-price {
            font-size: 1.4rem;
            font-weight: 700;
            margin: 8px 0;
            color: #fff;
        }

        .change-badge {
            font-size: 0.75rem;
            padding: 4px 10px;
            border-radius: 20px;
            font-weight: 600;
            display: inline-block;
        }

        .bg-up {
            background-color: rgba(52, 211, 153, 0.15);
            color: var(--accent-green);
        }

        .bg-down {
            background-color: rgba(239, 68, 68, 0.15);
            color: var(--accent-red);
        }

        /* Weather Card Özelleştirmeleri */
        .weather-card {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
            color: white;
            position: relative;
            overflow: hidden;
            border: none;
            min-height: 220px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .weather-header {
            background: rgba(0, 0, 0, 0.1);
            padding: 15px 20px;
            border-radius: 16px 16px 0 0;
            margin: -25px -25px 20px -25px;
        }

        .weather-big-temp {
            font-size: 5rem;
            font-weight: 700;
            letter-spacing: -2px;
            line-height: 1;
            text-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .weather-stat-box {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 10px;
            text-align: center;
            backdrop-filter: blur(5px);
        }

        .weather-stat-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            opacity: 0.7;
            display: block;
            margin-bottom: 3px;
        }

        .weather-stat-value {
            font-weight: 600;
            font-size: 1rem;
        }

        /* Chef Card Özelleştirmeleri */
        .chef-card {
            background: linear-gradient(145deg, #1f2937 0%, #111827 100%);
            border: 1px solid rgba(255, 255, 255, 0.05);
            position: relative;
        }

        .chef-quote-box {
            background: rgba(52, 211, 153, 0.05);
            border-left: 3px solid var(--accent-green);
            padding: 15px;
            border-radius: 0 8px 8px 0;
            margin-bottom: 20px;
            font-style: italic;
            color: #d1d5db;
        }

        /* List Items (Fuel & Concierge) */
        .list-row-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            margin-bottom: 10px;
            background-color: rgba(255,255,255,0.03);
            border-radius: 12px;
            transition: 0.2s;
            cursor: pointer;
        }

            .list-row-item:hover {
                background-color: rgba(255,255,255,0.08);
                transform: translateX(5px);
            }

            .list-row-item:last-child {
                margin-bottom: 0;
            }

        .fuel-price-tag {
            font-family: 'Courier New', monospace;
            font-weight: 700;
            font-size: 1.1rem;
            color: #fff;
        }

        /* Main Search Input */
        .main-search-input {
            background-color: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            color: white !important;
            border-radius: 12px;
            padding: 12px 20px;
            font-size: 1.1rem;
        }

            .main-search-input:focus {
                background-color: rgba(255,255,255,0.1);
                border-color: var(--accent-green);
                box-shadow: 0 0 15px rgba(52, 211, 153, 0.2);
            }

        .main-search-btn {
            background-color: var(--accent-green);
            color: var(--bg-dark);
            border: none;
            border-radius: 12px;
            padding: 0 25px;
            font-weight: 600;
            transition: 0.3s;
        }

            .main-search-btn:hover {
                background-color: #2dbd89;
                transform: translateY(-2px);
            }

        /* AI Recommendation Text */
        .ai-recommendation-text {
            font-size: 1.05rem;
            line-height: 1.7;
            color: #e0e6e3;
        }

        /* Placeholder Rengi */
        ::placeholder {
            color: rgba(255, 255, 255, 0.6) !important;
        }
    </style>
</head>
<body>

    <nav class="navbar-custom d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <a class="navbar-brand" href="#"><i class="fa-solid fa-layer-group me-2"></i>DailyBriefing</a>
            <div class="d-none d-md-flex gap-3 ms-4">
                <a href="#" class="text-white text-decoration-none opacity-75 hover-opacity-100">Dashboard</a>
                <a href="#" class="text-white text-decoration-none opacity-50 hover-opacity-100">Analytics</a>
            </div>
        </div>

        <div class="d-flex align-items-center gap-3" style="cursor: pointer;">
            <div class="text-end d-none d-sm-block">
                <div style="font-weight: 600; font-size: 0.9rem;">Duygu Kaya</div>
                <div style="font-size: 0.75rem; color: var(--text-muted);">Premium Member</div>
            </div>
            <img src="https://via.placeholder.com/150" alt="Profile" class="profile-img">
            <i class="fa-solid fa-chevron-down text-muted" style="font-size: 0.8rem;"></i>
        </div>
    </nav>

    <div class="container-fluid p-4" style="max-width: 1600px;">

        <div class="row mb-4 justify-content-center">
            <div class="col-lg-6">
                <form method="get" class="d-flex gap-2">
                    <input type="text" name="city" class="form-control main-search-input"
                           placeholder="Hangi şehri keşfetmek istiyorsun? (Örn: Paris, Tokyo)..."
                           value="@Model.CityName" required>
                    <button class="btn main-search-btn" type="submit">
                        <i class="fa-solid fa-paper-plane me-2"></i>Keşfet
                    </button>
                </form>
                <div class="text-center mt-2 text-white opacity-75 small">
                    <i class="fa-solid fa-circle-info me-1"></i>Bu arama hem hava durumunu, hem gezi önerilerini hem de yemek önerilerini günceller.
                </div>
            </div>
        </div>

        <div class="row g-4">

            <div class="col-lg-3">
                <span class="section-title">Finance & Economy</span>

                <div class="dashboard-card mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="m-0 fw-bold"><i class="fa-solid fa-chart-line me-2 text-success"></i>Market</h5>
                        <i class="fa-solid fa-ellipsis text-muted"></i>
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">USD</span><span class="text-success">$</span>
                                </div>
                                <div class="market-price">@Model.Market.UsdTry.Price ₺</div>
                                <span class="change-badge @(Model.Market.UsdTry.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.UsdTry.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.UsdTry.ChangeRate%
                                </span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">EUR</span><span class="text-primary">€</span>
                                </div>
                                <div class="market-price">@Model.Market.EurTry.Price ₺</div>
                                <span class="change-badge @(Model.Market.EurTry.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.EurTry.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.EurTry.ChangeRate%
                                </span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">GBP</span><span style="color: #a855f7; font-weight: bold;">£</span>
                                </div>
                                <div class="market-price">@Model.Market.GbpTry.Price ₺</div>
                                <span class="change-badge @(Model.Market.GbpTry.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.GbpTry.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.GbpTry.ChangeRate%
                                </span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">JPY</span><span style="color: #ec4899; font-weight: bold;">¥</span>
                                </div>
                                <div class="market-price">@Model.Market.JpyTry.Price ₺</div>
                                <span class="change-badge @(Model.Market.JpyTry.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.JpyTry.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.JpyTry.ChangeRate%
                                </span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">BTC</span><span class="text-warning"><i class="fa-brands fa-bitcoin"></i></span>
                                </div>
                                <div class="market-price">$@Model.Market.Bitcoin.Price</div>
                                <span class="change-badge @(Model.Market.Bitcoin.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.Bitcoin.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.Bitcoin.ChangeRate%
                                </span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="market-item">
                                <div class="d-flex justify-content-between">
                                    <span class="market-label">ETH</span><span class="text-info"><i class="fa-brands fa-ethereum"></i></span>
                                </div>
                                <div class="market-price">$@Model.Market.Ethereum.Price</div>
                                <span class="change-badge @(Model.Market.Ethereum.IsUp ? "bg-up" : "bg-down")">
                                    <i class="fa-solid @(Model.Market.Ethereum.IsUp ? "fa-arrow-trend-up" : "fa-arrow-trend-down")"></i> @Model.Market.Ethereum.ChangeRate%
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="m-0 fw-bold text-white text-uppercase" style="font-size: 0.95rem; letter-spacing: 0.5px;">
                            Akaryakıt (Türkiye Geneli)
                        </h6>
                        <i class="fa-solid fa-gas-pump" style="color: var(--fuel-icon); font-size: 1.2rem;"></i>
                    </div>

                    <div class="d-flex flex-column gap-2">
                        @if (Model.FuelPrices != null && Model.FuelPrices.Any())
                        {
                            @foreach (var fuel in Model.FuelPrices)
                            {
                                <div class="list-row-item p-2">
                                    <span>
                                        @if (fuel.Name.Contains("Benzin"))
                                        {
                                            <i class="fa-solid fa-circle me-2 text-white"></i>
                                        }
                                        else if (fuel.Name.Contains("Motorin"))
                                        {
                                            <i class="fa-solid fa-circle me-2 text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-circle me-2 text-primary"></i>
                                        }
                                        @fuel.Name
                                    </span>
                                    <span class="fuel-price-tag">@fuel.Price</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted mt-3">
                                <small>Veri yüklenemedi</small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <span class="section-title">Today's Highlights</span>

                <div class="dashboard-card weather-card mb-4 p-0">
                    <div class="weather-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fa-solid fa-location-dot text-white"></i>
                            <span class="fw-bold text-white text-uppercase h5 m-0">@Model.CityName</span>
                        </div>
                    </div>

                    <div class="p-4 pt-2">
                        <div class="row align-items-center mb-4">
                            <div class="col-6 text-center">
                                @if (!string.IsNullOrEmpty(Model.WeatherIcon))
                                {
                                    <img src="@Model.WeatherIcon" alt="icon" style="width: 110px; height: 110px; filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2));">
                                }
                                <div class="fw-light text-white opacity-75 mt-1 text-capitalize">@Model.WeatherCondition</div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="weather-big-temp">@Model.Temperature°</div>
                                <div class="text-white opacity-50 small">Bugün</div>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="col-4">
                                <div class="weather-stat-box">
                                    <i class="fa-solid fa-droplet mb-1 text-info"></i>
                                    <span class="weather-stat-label">Nem</span>
                                    <span class="weather-stat-value">%@Model.Humidity</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="weather-stat-box">
                                    <i class="fa-solid fa-wind mb-1 text-white-50"></i>
                                    <span class="weather-stat-label">Rüzgar</span>
                                    <span class="weather-stat-value">@Model.WindSpeed <small>km/s</small></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="weather-stat-box">
                                    <i class="fa-solid fa-gauge-high mb-1 text-warning"></i>
                                    <span class="weather-stat-label">Basınç</span>
                                    <span class="weather-stat-value">1012 <small>hPa</small></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-card chef-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center gap-2 text-success">
                            <i class="fa-solid fa-utensils"></i>
                            <span class="fw-bold text-uppercase" style="letter-spacing: 1px; font-size: 0.8rem;">Günün Menüsü</span>
                        </div>
                        <span class="badge bg-success bg-opacity-25 text-success">AI Chef</span>
                    </div>

                    <div class="menu-container d-flex flex-column gap-3 mb-3">
                        @if (Model.DailyMenu != null && Model.DailyMenu.Any())
                        {
                            foreach (var item in Model.DailyMenu)
                            {
                                <div class="d-flex align-items-start gap-3 p-2 rounded" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.05);">
                                    <div class="mt-1" style="min-width: 25px;">
                                        @if (item.Course.Contains("Çorba"))
                                        {
                                            <i class="fa-solid fa-mug-hot text-warning fa-lg"></i>
                                        }
                                        else if (item.Course.Contains("Ana"))
                                        {
                                            <i class="fa-solid fa-drumstick-bite text-danger fa-lg"></i>
                                        }
                                        else if (item.Course.Contains("Tatlı"))
                                        {
                                            <i class="fa-solid fa-cookie-bite text-info fa-lg"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-leaf text-success fa-lg"></i>
                                        }
                                    </div>

                                    <div>
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <span class="badge border border-light text-light fw-light opacity-50" style="font-size: 0.6rem;">@item.Course</span>
                                            <h6 class="mb-0 text-white fw-bold" style="font-size: 0.95rem;">@item.Name</h6>
                                        </div>
                                        <p class="mb-0 text-white opacity-75 small" style="line-height: 1.5; font-weight: 300;">
                                            @item.Description
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-3">
                                <i class="fa-solid fa-fire-burner fa-2x mb-2"></i>
                                <p>Şef menüyü hazırlıyor...</p>
                            </div>
                        }
                    </div>

                    <div class="d-grid mt-auto">
                        <button class="btn btn-success fw-bold btn-sm py-2">
                            <i class="fa-solid fa-rotate me-2"></i>Yeni Menü Oluştur
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <span class="section-title">Concierge & AI Travel</span>

                <div class="dashboard-card h-100">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="m-0 fw-bold d-flex align-items-center gap-2">
                            <i class="fa-solid fa-robot text-accent-green"></i>
                            @Model.CityName Keşifleri
                        </h5>
                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                            AI Powered
                        </span>
                    </div>

                    <div class="d-flex flex-column gap-3">
                        @if (!string.IsNullOrEmpty(Model.TravelRecommendations))
                        {
                            var recommendations = Model.TravelRecommendations.Split(new[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);

                            foreach (var item in recommendations)
                            {
                                if (!string.IsNullOrWhiteSpace(item))
                                {
                                    <div class="list-row-item p-3" style="background-color: rgba(52, 211, 153, 0.08); align-items: flex-start;">
                                        <div class="d-flex align-items-center">
                                            <span class="ai-recommendation-text">@Html.Raw(item)</span>
                                        </div>
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4 opacity-50">
                                <i class="fa-solid fa-map-location-dot fa-3x mb-3"></i>
                                <p>Bir şehir aratın, yapay zeka sizin için gezilecek yerleri listelesin.</p>
                            </div>
                        }
                    </div>

                    <div class="mt-4 pt-3 border-top border-secondary border-opacity-25">
                        <div class="alert alert-success bg-opacity-10 bg-success text-success border-0 mb-0 d-flex align-items-center gap-2 p-2">
                            <i class="fa-solid fa-sparkles"></i>
                            <div style="font-size: 0.75rem; line-height: 1.2;">Öneriler Anthropic Claude AI tarafından anlık olarak oluşturulmuştur.</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>