@model RapidApiBooking.Models.HotelListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Deluxe - Otel Sonuçları</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/deluxe-master/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/deluxe-master/css/animate.css">
    <link rel="stylesheet" href="~/deluxe-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/deluxe-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/deluxe-master/css/magnific-popup.css">
    <link rel="stylesheet" href="~/deluxe-master/css/aos.css">
    <link rel="stylesheet" href="~/deluxe-master/css/ionicons.min.css">
    <link rel="stylesheet" href="~/deluxe-master/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/deluxe-master/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/deluxe-master/css/flaticon.css">
    <link rel="stylesheet" href="~/deluxe-master/css/icomoon.css">
    <link rel="stylesheet" href="~/deluxe-master/css/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Deluxe</a>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="/Home/Index" class="nav-link">Ana Sayfa</a></li>
                    <li class="nav-item active"><a href="#" class="nav-link">Arama Sonuçları</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="hero-wrap" style="background-image: url('/deluxe-master/images/bg_1.jpg'); background-position: 50% 0%;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-3 bread">Müsait Oteller</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        @if (Model.Hotels != null && Model.Hotels.Count > 0)
                        {
                            @foreach (var hotel in Model.Hotels)
                            {
                                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                                    <div class="room">
                                        <a href="/Otel/Detail?id=@hotel.HotelId&checkInDate=@hotel.CheckIn&checkOutDate=@hotel.CheckOut" class="img d-flex justify-content-center align-items-center" style="background-image: url(@hotel.PhotoUrl);">
                                            <div class="icon d-flex justify-content-center align-items-center">
                                                <span class="icon-search2"></span>
                                            </div>
                                        </a>
                                        <div class="text p-3 text-center">
                                            <h3 class="mb-3"><a href="/Otel/Detail?id=@hotel.HotelId&checkInDate=@hotel.CheckIn&checkOutDate=@hotel.CheckOut">@hotel.Name</a></h3>

                                            <p><span class="price mr-2">@hotel.Price</span></p>
                                            <ul class="list">
                                                <li><span>Puan:</span> @hotel.Score</li>
                                                <li><span>Giriş:</span> @hotel.CheckIn</li>
                                            </ul>
                                            <hr>
                                            <p class="pt-1">
                                                <a href="/Otel/Detail?id=@hotel.HotelId&checkInDate=@hotel.CheckIn&checkOutDate=@hotel.CheckOut" class="btn-custom">
                                                    Detayları Gör <span class="icon-long-arrow-right"></span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-md-12 text-center">
                                <div class="alert alert-warning">
                                    <h3>Üzgünüz, otel bulunamadı.</h3>
                                    <a href="/Home/Index" class="btn btn-primary">Yeni Arama Yap</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/deluxe-master/js/jquery.min.js"></script>
    <script src="~/deluxe-master/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/deluxe-master/js/popper.min.js"></script>
    <script src="~/deluxe-master/js/bootstrap.min.js"></script>
    <script src="~/deluxe-master/js/jquery.easing.1.3.js"></script>
    <script src="~/deluxe-master/js/jquery.waypoints.min.js"></script>
    <script src="~/deluxe-master/js/jquery.stellar.min.js"></script>
    <script src="~/deluxe-master/js/owl.carousel.min.js"></script>
    <script src="~/deluxe-master/js/jquery.magnific-popup.min.js"></script>
    <script src="~/deluxe-master/js/aos.js"></script>
    <script src="~/deluxe-master/js/jquery.animateNumber.min.js"></script>
    <script src="~/deluxe-master/js/bootstrap-datepicker.js"></script>
    <script src="~/deluxe-master/js/scrollax.min.js"></script>
    <script src="~/deluxe-master/js/main.js"></script>
</body>
</html>